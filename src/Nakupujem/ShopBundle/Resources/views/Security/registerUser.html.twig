{% extends "NakupujemShopBundle::securityLayout.html.twig" %}

{% block title %}Registrácia použivateľa{% endblock %}

{% block content %}
				<h4 class="innerAll margin-none border-bottom text-center bg-primary"><i class="fa fa-pencil"></i> Create a new Account</h4>

				<!-- col-table-row -->
				<div class="col-table-row">

					<!-- col-app -->
					<div class="col-app col-unscrollable">

						<!-- col-app -->
						<div class="col-app">

							<div class="login">
								
								<div class="placeholder text-center"><i class="fa fa-pencil"></i></div>
								
								<div class="panel panel-default col-sm-6 col-sm-offset-3">

								  	<div class="panel-body">
								  		{{form_start(form)}}
									  		<div class="form-group">
									    		<label for="exampleInputEmail1">Meno</label>
									    		{{form_widget(form.name)}}
									  		</div>
								  	  		<div class="form-group">
									    		<label for="exampleInputEmail1">Priezvisko</label>
									    		{{form_widget(form.lastname)}}
									  		</div>
									  		<div class="form-group">
									    		<label for="exampleInputEmail1">Prihlasovacie meno</label>
									    		{{form_widget(form.username)}}
									  		</div>
									  		<div class="form-group">
									    		<label for="exampleInputEmail1">E-mail</label>
									    		{{form_widget(form.email)}}
									  		</div>
									  		<div class="form-group">
									    		<label for="exampleInputEmail1">Okolie</label>
									    		{{form_widget(form.location)}}
									  		</div>
									  		<div class="form-group">
									    		<label for="exampleInputPassword1">Heslo</label>
									    		{{form_widget(form.password.first)}}
									  		</div>
								    		<div class="form-group">
									    		<label for="exampleInputPassword1">Heslo znova</label>
									    		{{form_widget(form.password.second)}}
									  		</div>
									  		<button type="submit" class="btn btn-primary btn-block">Registrovať</button>
									  		{{form_errors(form)}}
										{{form_end(form)}}
							  		</div>
								
								</div>
								<div class="clearfix"></div>					

							</div>
							
						</div>
						<!-- // END col-app -->

					</div>
					<!-- // END col-app.col-unscrollable -->

				</div>
				<!-- // END col-table-row -->


{% endblock %}
