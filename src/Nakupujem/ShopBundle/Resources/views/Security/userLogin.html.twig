{% extends "NakupujemShopBundle::securityLayout.html.twig" %}
{% block title %}{% endblock %}
{% block content %}
                
                <h4 class="innerAll margin-none border-bottom text-center"><i class="fa fa-lock"></i> {{'txt.login'|trans|raw}}</h4>

                <!-- col-table-row -->
                <div class="col-table-row">

                    <!-- col-app -->
                    <div class="col-app col-unscrollable">

                        <!-- col-app -->
                        <div class="col-app">
                            <div class="login">
                                <div class="placeholder text-center"><i class="fa fa-lock"></i></div>
                                <div class="panel panel-default col-sm-6 col-sm-offset-3">

                                  <div class="panel-body">
                                  	<form role="form" action="{{path('_user_security_check')}}" method="post">

                                      <div class="form-group">
                                        <label for="exampleInputEmail1">Používateľské meno</label>
                                        <input type="text" name="_username" class="form-control" id="exampleInputEmail1" placeholder="Používateľské meno...">
                                      </div>
                                      <div class="form-group">
                                        <label for="exampleInputPassword1">Heslo</label>
                                        <input type="password" class="form-control" id="exampleInputPassword1" name="_password" placeholder="Heslo...">
                                      </div>

                                      <button type="submit" class="btn btn-primary btn-block">Prihlásiť</button>

                                      <div class="checkbox">
                                        <label>
                                          <input type="checkbox"> Zapamätať prihlásenie
                                        </label>
                                      </div>
                                    </form>
                                   
                                  </div>
                                
                                </div>
                                <div class="col-sm-4 col-sm-offset-4 text-center">
                                    <div class="innerAll">
                                        <a href="{{path('_user_register')}}" class="btn btn-info">Zaregistrovať sa? <i class="fa fa-pencil"></i> </a>
                                        <div class="separator"></div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            
                            </div>


                        </div>
                        <!-- // END col-app -->

                    </div>
                    <!-- // END col-app.col-unscrollable -->

                </div>
                <!-- // END col-table-row -->
{% endblock %}