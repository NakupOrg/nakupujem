{% extends "NakupujemShopBundle::layout.html.twig" %}

{% block title %}Produkty{% endblock %}

{% block products %}
	{% if not products %}
		<h2>Žiadne produkty, všetko sa vypredalo</h2>
	{% else %}
	<div class="row">
		{% for product in products %}
		<div class="col-sm-4 col-xs-12">
			<div class="widget widget-pinterest fixed-height" data-animate="bounceIn" data-delay="200">
				<div class="mark">
					<span class="caret caret-primary"></span>
					<span class="text">TOP</span>  
				</div>
				<div class="widget-body padding-none">
					<a href="{{path('product_show', {"product_id": product.id})}}" class="thumb">
						{% if product.photo[0] is defined %}
							<img src="{{asset('uploads/photos/')}}{{product.photo[0].path}}" alt="" class="img-responsive"></a>
						{% else %}
						<img src="{{asset('assets/images/fashion/female/')}}3.jpg" alt="" class="img-responsive"></a>
						{% endif %}
					<div class="description">
						<a href="cart.html" class="btn btn-primary btn-circle pull-right"><i class="fa fa-info"></i></a>
						<h5 class="text-uppercase">{{product.title}}</h5>
						<span class="text-primary text-medium text-condensed">&euro;{{product.price}}</span>
					</div>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
{% endif %}
{% endblock %}
 
{% block slider %}
{% for key, product in products if key < 5 %}
<div class="item">
        <div class="box-generic">
            <div class="wrapper">
                <div class="row">
                    <div class="col-lg-9 col-md-8 padding-none">
                        <a href="product.html">
                            {% if product.photo[0] is defined %}
								<img src="{{asset('uploads/photos/')}}{{product.photo[0].path}}" alt="" class="img-responsive">
							{% else %}
								<img src="{{asset('assets/images/fashion/female/')}}3.jpg" alt="" class="img-responsive">
							{% endif %}
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-4 padding-none">
                        <div class="innerAll inner-2x">
                            <a href="cart.htmlcart.html" class="btn btn-primary btn-circle pull-right"><i class="fa fa-shopping-cart"></i></a>
                            <h3 class="text-uppercase">{{product.title}}</h3>
                            <span class="text-primary text-medium text-condensed">&euro;{{product.price}}</span>
                            <div class="clearfix"></div>
                            <div class="separator"></div>

                            <p class="innerTB">{{product.description}}</p>

                            <a href="cart.html" class="btn btn-primary"><i class="fa fa-info"></i> Detail</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}

{% block category %}
<div class="col-md-3" data-animate="fadeInRight" data-delay="200">
    <h5 class="text-faded">{{"txt.categories"|trans|raw}}</h5>
    <ul class="list-group list-group-front">
    {% for category in categories %}
    <li class="list-group-item active"><a href="catalog.html"><i class="{{category.faicon}}"></i> {{category.name}}</a></li>
    {% endfor %}
</ul>

</div>
{% endblock %}
