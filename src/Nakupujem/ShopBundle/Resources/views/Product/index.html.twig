{% extends "NakupujemShopBundle::layout.html.twig" %}

{% block title %}Produkty{% endblock %}

{% block products %}
	{% if not products %}
		<h2>Žiadne produkty, všetko sa vypredalo</h2>
	{% else %}
	<div class="row">
		{% for product in products %}
		<div class="col-sm-4 col-xs-12">
			<div class="widget widget-pinterest fixed-height" data-animate="bounceIn" data-delay="200">
				<div class="mark">
					<span class="caret caret-primary"></span>
					<span class="text">TOP</span>  
				</div>
				<div class="widget-body padding-none">
					<a href="#" class="thumb"><img src="{{asset('uploads/photos/')}}{{product.photo[0].path}}" alt="" class="img-responsive"></a>
					<div class="description">
						<a href="cart.html" class="btn btn-primary btn-circle pull-right"><i class="fa fa-shopping-cart"></i></a>
						<h5 class="text-uppercase">{{product.title}}</h5>
						<span class="text-primary text-medium text-condensed">&euro;{{product.price}}</span>
					</div>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
{% endif %}
{% endblock %}

{% block category %}
<div class="col-md-3" data-animate="fadeInRight" data-delay="200">
    <h5 class="text-faded">{{"txt.categories"|trans|raw}}</h5>
    <ul class="list-group list-group-front">
    {% for category in categories %}
    <li class="list-group-item active"><a href="catalog.html"><i class="{{category.faicon}}"></i> {{category.name}}</a></li>
    {% endfor %}
</ul>

</div>
{% endblock %}
